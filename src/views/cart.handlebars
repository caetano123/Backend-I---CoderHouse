<h1>{{title}}</h1>

{{#if cart.products.length}}
  <ul>
    {{#each cart.products}}
      <li style="margin-bottom: 20px;">
        <strong>{{this.product.title}}</strong> - ${{this.product.price}} x {{this.quantity}} unidades
        <br>
        {{#if this.product.thumbnails}}
          <img src="/{{this.product.thumbnails.[0]}}" alt="{{this.product.title}}" width="100" style="border-radius: 8px; margin-top: 5px;">
        {{/if}}
      </li>
    {{/each}}
  </ul>

  <p><strong>Total:</strong> ${{total}}</p>

  <input type="hidden" id="cartId" value="{{cart._id}}">
  <button id="emptyCartBtn" data-cartid="{{cart._id}}">Vaciar carrito</button>
{{else}}
  <p>No hay productos en este carrito.</p>
  <button onclick="window.location.href='/products'">Volver al inicio</button>
{{/if}}

