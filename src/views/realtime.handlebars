<h1>{{title}}</h1>

<!-- Crear Carrito -->
<h2>Crear Carrito</h2>
<form id="createCartForm">
  <button type="submit">Crear nuevo carrito</button>
</form>

<!-- Lista de Carritos -->
<h2>Carritos</h2>
<select id="cartSelect">
  <option value="">-- Selecciona un carrito --</option>
  {{#each carts}}
    <option value="{{this._id}}">Carrito #{{this._id}}</option>
  {{/each}}
</select>
<ul id="cartProductsList"></ul>

<!-- Formulario para agregar producto -->
<h2>Agregar Producto</h2>
<form id="addProductForm">
  <input type="text" id="title" placeholder="Título" required>
  <input type="text" id="description" placeholder="Descripción" required>
  <input type="text" id="code" placeholder="Código" required>
  <input type="number" id="price" placeholder="Precio" required>
  <input type="number" id="stock" placeholder="Stock" required>
  <input type="text" id="category" placeholder="Categoría" required>
  <input type="text" id="thumbnails" placeholder="URLs de imágenes, separadas por comas">
  <button type="submit">Agregar producto</button>
</form>

<!-- Lista de productos -->
<h2>Productos</h2>
<ul id="productsList">
  {{#each products}}
    <li>
      <strong>{{this.title}}</strong> - ${{this.price}} <br>
      {{this.description}} <br>
      Código: {{this.code}} | Stock: {{this.stock}} | Categoría: {{this.category}}<br>
      {{#if this.thumbnails}}
        {{#each this.thumbnails}}
          <img src="{{this}}" width="100">
        {{/each}}
      {{/if}}
      <button class="addToCartBtn" data-productid="{{this._id}}">Agregar al carrito</button>
      <button class="deleteProduct" data-productid="{{this._id}}">Eliminar producto</button>
    </li>
  {{/each}}
</ul>

<!-- Scripts -->
<script src="/socket.io/socket.io.js"></script>
<script src="/js/realtime.js"></script>
