<h1>{{title}}</h1>

<p>Bienvenido a nuestra tienda online!</p>

{{#if products.length}}
  <h2>Productos destacados</h2>
  <ul style="list-style: none; padding: 0;">
    {{#each products}}
      <li style="margin-bottom: 20px; border-bottom: 1px solid #ccc; padding-bottom: 10px;">
        <a href="/products/{{this._id}}">
          <strong>{{this.title}}</strong>
        </a>
        <p>Precio: ${{this.price}}</p>
        {{#if this.thumbnails}}
          <img src="/{{this.thumbnails.[0]}}" alt="{{this.title}}" width="150" style="border-radius: 8px; margin-top: 5px;">
        {{/if}}
      </li>
    {{/each}}
  </ul>
{{else}}
  <p>No hay productos destacados por el momento.</p>
{{/if}}

<a href="/products">
  <button style="margin-top: 20px;">Ver todos los productos</button>
</a>

