<h1>{{title}}</h1>

<p>Bienvenido a nuestra tienda online!</p>

{{#if products.length}}
  <h2>Productos destacados</h2>

  <ul style="list-style: none; padding: 0; display: grid; grid-template-columns: repeat(auto-fill, minmax(200px, 1fr)); gap: 20px;">
    {{#each products}}
      <li style="border: 1px solid #ddd; border-radius: 10px; padding: 15px; text-align: center; background-color: #fafafa; box-shadow: 0 2px 6px rgba(0,0,0,0.1); transition: transform 0.2s;">
        <a href="/products/{{this._id}}" style="text-decoration: none; color: #333;">
          <strong>{{this.title}}</strong>
        </a>
        <p style="margin: 8px 0;">üí≤{{this.price}}</p>
        {{#if this.thumbnails}}
          <img src="/{{this.thumbnails.[0]}}" alt="{{this.title}}" width="150" style="border-radius: 8px; margin-top: 5px;">
        {{/if}}
      </li>
    {{/each}}
  </ul>

  {{!-- PAGINACI√ìN --}}
  <div style="display: flex; justify-content: center; align-items: center; margin-top: 30px; gap: 10px;">
    {{#if hasPrevPage}}
      <a href="/?page={{prevPage}}" style="text-decoration: none;">
        <button style="padding: 8px 14px; border: none; border-radius: 8px; background-color: #007bff; color: white; cursor: pointer; transition: background-color 0.2s;">
          ‚¨ÖÔ∏è Anterior
        </button>
      </a>
    {{/if}}

    <span style="font-weight: bold;">P√°gina {{currentPage}} de {{totalPages}}</span>

    {{#if hasNextPage}}
      <a href="/?page={{nextPage}}" style="text-decoration: none;">
        <button style="padding: 8px 14px; border: none; border-radius: 8px; background-color: #007bff; color: white; cursor: pointer; transition: background-color 0.2s;">
          Siguiente ‚û°Ô∏è
        </button>
      </a>
    {{/if}}
  </div>

{{else}}
  <p>No hay productos destacados por el momento.</p>
{{/if}}

<a href="/products">
  <button style="margin-top: 20px; padding: 10px 16px; border: none; border-radius: 8px; background-color: #28a745; color: white; cursor: pointer; transition: background-color 0.2s;">
    Ver todos los productos
  </button>
</a>
