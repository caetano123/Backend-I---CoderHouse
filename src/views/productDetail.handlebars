<div class="product-detail-container">
  <h1>{{product.title}}</h1>

  <div class="product-info">
    <p><strong>Precio:</strong> ${{product.price}}</p>
    <p><strong>Categor√≠a:</strong> {{product.category}}</p>
    <p><strong>Stock:</strong> {{product.stock}}</p>
    <p><strong>C√≥digo:</strong> {{product.code}}</p>
    <p><strong>Descripci√≥n:</strong> {{product.description}}</p>
  </div>

  {{#if product.thumbnails}}
    <div class="product-images">
      {{#each product.thumbnails}}
        <img src="/{{this}}" alt="Imagen de {{../product.title}}">
      {{/each}}
    </div>
  {{/if}}

  <div class="product-actions">
    <select id="cartSelect" required>
      <option value="">--Selecciona un carrito--</option>
      {{#each carts}}
        <option value="{{this._id}}">Carrito #{{this._id}}</option>
      {{/each}}
    </select>

    <input type="number" id="quantity" value="1" min="1" max="{{product.stock}}">

    <button type="button" class="addToCartBtn" data-productid="{{product._id}}">
      üõí Agregar al carrito
    </button>
  </div>

  <div class="back-button">
    <button onclick="window.location.href='/products'" class="btn-primary">‚Üê Volver al cat√°logo</button>
  </div>
</div>
